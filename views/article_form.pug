extends layout

block content
  h1= title

  form(method='POST')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text', placeholder='Name (Apple)' name='name' required value=(article ? article.name : ''))
    
    div.form-group
      label(for='short_description') Short Description:
      input#shortDescription.form-control(type='text', placeholder='Short Description (Fresh red apples)' name='short_description' required value=(article ? article.shortDescription : ''))
    
    div.form-group
      label(for='category') Category:
      select#category.form-control(name='category' required)
        option(value='') --Select a category--
        each category in categories
          if article
            if category._id.toString()===article.category._id.toString()
              option(value=category._id selected) #{category.name}
            else
              option(value=category._id) #{category.name}
          else
            option(value=category._id) #{category.name}
    
    div.form-group
      label(for='price') Price:
      input#price.form-control(type='number', placeholder='Price (1.99)' name='price' required step='0.01' value=(article ? article.price : ''))
    
    div.form-group
      label(for='stock_number') Stock Number:
      input#stock_number.form-control(type='number', placeholder='Stock Number (100)' name='stock_number' required value=(article ? article.stock_number : ''))
    
    div.form-group
      label(for='detail_description') Detail Description:
      textarea#detail_description.form-control(name='detail_description' rows='4' required placeholder='Detailed description of the article')= (article ? article.detailDescription : '')
    
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg