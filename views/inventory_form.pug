extends layout

block content
  h1= title

  form(method='POST')
    div.form-group
      label(for='owner') Owner:
      input#owner.form-control(type='text', placeholder='Owner (Lionel)' name='owner' required value=(inventory ? inventory.owner : ''))

    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg