extends layout

block content

  h1 #{title}: #{category.name}
  p= category.lifespan

  if category_articles.length

    p #[strong Delete the following articles before attempting to delete this category.]
    div(style='margin-left:20px;margin-top:20px')
      h4 Inventory's
      dl
        each articles in category_articles
          dt
            a(href=articles.url) #{articles.name}

  else
    p Do you really want to delete this Category?

    form(method='POST')
      div.form-group
        input#categoryid.form-control(type='hidden', name='categoryid', value=category._id )

      button.btn.btn-primary(type='submit') Delete